@model List<CategoryViewModel>

@{
	ViewData["Title"] = "Categories";
}

<table class="table table-responsive table-hover table-dark">
	<thead>
		<tr>
			<th></th>
			<th>Id</th>
			<th>Name</th>
			<th>Details</th>
			<th>Update</th>
			<th>Delete</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var category in Model)
		{
			<tr>
				<td></td>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td><a asp-action="GetById" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-success"><i class="bi bi-info-circle"></i> Details</a></td>
				<td><a asp-action="UpdateForm" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-success" style="background-color:darkslateblue"><i class="bi bi-pencil-square"></i> Update</a></td>
				
				
				
				<td><a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-success" style="background-color:darkred"><i class="bi bi-trash3-fill"></i> Delete</a></td>

				
				
				
				<td></td>
			</tr>
		}
	</tbody>
</table>

<div class="container">
	<a asp-action="AddForm" asp-controller="Category" class="btn btn-outline-success btn-lg"><i class="bi bi-plus-circle"></i> Add New Category</a>
</div>


