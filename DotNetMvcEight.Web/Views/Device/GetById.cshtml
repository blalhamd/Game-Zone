@model DeviceViewModel

@{
	ViewData["Title"] = "Device";
}

<table class="table table-responsive table-hover table-dark">
	<thead>
		<tr>
			<th></th>
			<th>Id</th>
			<th>Name</th>
			<th>Icon</th>
			<th>Update</th>
			<th>Delete</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td></td>
			<td>@Model.Id</td>
			<td>@Model.Name</td>
			<td>@Model.Icon</td>
			<td><a asp-action="UpdateForm" asp-controller="Device" asp-route-id="@Model.Id" class="btn btn-success" style="background-color:darkslateblue"><i class="bi bi-pencil-square"></i> Update</a></td>
			<td><a asp-action="Delete" asp-controller="Device" asp-route-id="@Model.Id" class="btn btn-success" style="background-color:darkred"><i class="bi bi-trash3-fill"></i> Delete</a></td>
			<td></td>
		</tr>
	</tbody>
</table>

<div class="container">
	<a asp-action="GetAll" asp-controller="Device" class="btn btn-outline-success btn-lg"><i class="bi bi-arrow-left-circle"></i> Back To List</a>
</div>